<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingRight="@dimen/_16sdp"
        android:paddingBottom="@dimen/_8sdp">

    <ImageView
            android:id="@+id/imgArticle"
            android:layout_width="@dimen/_96sdp"
            android:layout_height="@dimen/_80sdp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
            android:id="@+id/titleArticle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgArticle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constrainedWidth="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Title fdsffa oisef jiose"/>

    <TextView
            android:id="@+id/authorArticle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/titleArticle"
            app:layout_constraintLeft_toRightOf="@id/imgArticle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constrainedWidth="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:ellipsize="end"
            android:maxLines="3"
            tools:text="Title fdsffa oisef jiose"/>

    <TextView
            android:id="@+id/pubDateArticle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/authorArticle"
            app:layout_constraintLeft_toRightOf="@id/imgArticle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constrainedWidth="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/_8ssp"
            tools:text="Title fdsffa oisef jiose"/>

</androidx.constraintlayout.widget.ConstraintLayout>